<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <!-- For Android 13+ (API 33+) -->
    <uses-permission android:name="android.permission.READ_MEDIA_DOCUMENTS" />
    
    <!-- Audio recording permissions for interview practice -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Notification permissions -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- The SCHEDULE_EXACT_ALARM permission is required for exact alarms on Android 13+ (API 33+).
         Ensure that the app guides users to enable this permission in the app settings
         or handles cases where the permission is not granted to avoid silent failures. -->
    <uses-permission
        android:name="android.permission.SCHEDULE_EXACT_ALARM"
        tools:targetApi="33" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_careercompass"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_careercompass_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CareerCompass"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">
        
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name="dev.hungrymonkey.careercompass.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CareerCompass">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <receiver 
            android:name="dev.hungrymonkey.careercompass.notifications.GoalReminderReceiver"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>